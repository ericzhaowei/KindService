<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lb_default_brand_color_dark">

        <Button
            android:id="@+id/button_local"
            android:text="@string/local_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/local_file_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remote_file_count"/>
        <Button
            android:id="@+id/button_remote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remote_service"/>

        <Button
            android:id="@+id/remote_file_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remote_file_count"/>

        <Button
            android:id="@+id/startMusicService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_music_service"/>

    </LinearLayout>
</layout>